<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:context=".mainfr.tarjetas2">

    <androidx.cardview.widget.CardView
        android:id="@+id/autenticaTarjeta2"
        android:layout_width="400dp"
        android:layout_height="250dp"
        app:cardCornerRadius="40dp"
        android:layout_marginTop="10dp"
        android:backgroundTint="@color/md_theme_outline_mediumContrast"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/image2"
                android:layout_gravity="center"
                android:layout_width="200dp"
                android:layout_height="200dp"
                android:layout_marginLeft="15dp"
                android:src="@drawable/cactus_icon2" />

            <TextView
                android:id="@+id/Texto2"
                android:layout_gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="28dp"
                android:fontFamily="@font/cactusregular"
                android:text="I'm a Cactus"
                android:textColor="@color/md_theme_inversePrimary_highContrast"
                android:textSize="20dp" />
        </LinearLayout>

    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>